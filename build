#!/bin/bash

# Author: Jaap Versteegh <j.r.versteegh@gmail.com>

function fail()
{
  msg=$1
  echo $msg >&2
  exit 1
}

function test_available()
{
  prog=$1
  which $prog >/dev/null || fail "$prog is required for building devstack"
}
 
test_available cmake
test_available gzip
test_available bzip2
test_available xz
test_available wget

curdir=`dirname $BASH_SOURCE`
curdir=`readlink -f $curdir`
cd $curdir

source env.sh

pushd src 
./download || fail "Failed to download some sources"
popd


if [ ! -x bin/cmake ]; then
  mkdir -p .build
  pushd .build 
  cmake ../src -DCMAKE_INSTALL_PREFIX=$curdir || fail "Failed to run cmake: stage 1"
  make -j 8 2>&1 | tee build-1.log || fail "Failed to complete make up to cmake: stage 1"
  popd
  src/clean
  rm -rf .build
fi

# Rerun with new cmake
pushd .build 
cmake ../src -DCMAKE_INSTALL_PREFIX=$curdir || fail "Failed to run cmake: stage 2"
# ... and go again with full build
make -j 8 2>&1 | tee build-2.log || fail "Failed to complete make world"
popd
echo "Done!"
